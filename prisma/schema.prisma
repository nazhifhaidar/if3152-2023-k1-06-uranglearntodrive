// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  name      String
  email     String  @unique
  password  String
  role      Role    @default(ADMIN)
}

model Pelanggan {
  nama_lengkap     String          @@id
  id_kelas         Int             @@id
  pilihan_kelas    Kelas           @relation(fields: [id_kelas], references: [id])
  tipeKendaraan    TipeKendaraan   @relation(fields: [tipe_kendaraan], references: [tipe])
  statusPelanggan  StatusPelanggan @relation(fields: [status_pelanggan], references: [statusPelanggan])
  umur             Int
  no_telp          String
  alamat           String
  tipe_kendaraan   String
  status_pelanggan String
}

model Kendaraan {
  id              Int           @id @default(autoincrement())
  nama            String
  tipeKendaraan   TipeKendaraan @relation(fields: [tipe_kendaraan], references: [tipe])
  tipe_kendaraan  String 
  kelas           Kelas?
  status_kendaraan  String
  tanggal_servis  DateTime?     @db.Date
}

model TipeKendaraan {
  tipe          String  @id
  kendaraan     Kendaraan[]
  pelanggan     Pelanggan[]
}

model Kelas {
  id              Int       @id @default(autoincrement())
  nama            String    
  harga           Int
  total_jam       Int
  jumlah_sesi     Int
  kendaraan       Kendaraan @relation(fields: [id_kendaraan], references: [id]) 
  id_kendaraan    Int       @unique
  id_instruktur   Int
  jadwal          Jadwal[]
  instruktur      Instruktur @relation(fields: [id_instruktur], references: [id])
  pelanggan       Pelanggan[]
}

model Instruktur {
  id              Int   @id @default(autoincrement())
  nama_lengkap    String
  nik             String
  alamat          String
  no_telp         String
  kelas           Kelas[]
}

model Jadwal  {
  id              Int           @id @default(autoincrement())
  kelas           Kelas         @relation(fields: [id_kelas], references: [id])
  tanggal         DateTime      @db.Date
  start_sesi      DateTime      @db.Time
  end_sesi        DateTime      @db.Time
  id_kelas        Int
}

enum Role {
  OWNER
  ADMIN
}
